		@page "{id?}"
		@model Ecommerce.Web.Areas.Admin.Pages.Products.EditModel
		@{
		    Layout = "_SecureLayout";
		}
		
		@{
		    //ViewData["Title"] = "Edit";
		}
		
		<h1>Edit @Model.Product.Name</h1>
		<hr />
		@if (!string.IsNullOrEmpty(Model.Error))
		{
		    <div class="alert alert-danger" role="alert">
		        @Model.Error
		    </div>
		}
		else
		{
		    <form asp-page="Edit" asp-route-id="@Model.Product.ProductId">
		        <div class="row">
		            <div class="col-md-4">
		                <div asp-validation-summary="ModelOnly"></div>
		                @Html.EditorFor(x => x.Product,
		                    new {   LookupValues = Model.LookupValues,
		                            StatusNameLookValues = Model.StatusSelectNameList
		                          
		                        })
		                <input type="hidden" asp-for="Product.ProductId" />
		                
		            </div>
		        </div>
		        <div class="d-flex flex-row mt-3">
		            <button type="submit" class="btn btn-primary">Save <i class="fas fa-save"></i></button>&nbsp;&nbsp;|&nbsp;&nbsp;
		            <item-list></item-list>
		        </div>
		    </form>
		}
		@section Scripts {
		    @{
		        await Html.RenderPartialAsync("_ValidationScriptsPartial");
		    }
		}
		
