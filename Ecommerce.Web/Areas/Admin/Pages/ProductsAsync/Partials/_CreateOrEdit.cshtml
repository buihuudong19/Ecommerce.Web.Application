			@using Solid.Ecommerce.Application.ViewModels;
			@model Ecommerce.Web.Areas.Admin.Pages.ProductsAsync.IndexModel;
			<form id="create-form" method="post" asp-page="Index" asp-route-id="@Model.Product.ProductId" asp-page-handler="CreateOrEdit" onsubmit="return jQueryModalPost(this);">
			    <div class="form-group row">
			        <label class="col-md-3 col-form-label">Product Name</label>
			        <div class="col-md-9">
			            <input type="text" autocomplete="off" asp-for="Product.Name" name="Product.Name" class="form-control">
			            <span asp-validation-for="Product.Name" class="text-danger"></span>
			        </div>
			    </div>
			    <div class="form-group row">
			        <label class="col-md-3 col-form-label">Product Number</label>
			        <div class="col-md-9">
			            <input type="text" autocomplete="off" asp-for="Product.ProductNumber" name="Product.ProductNumber" class="form-control">
			            <span asp-validation-for="Product.ProductNumber" class="text-danger"></span>
			        </div>
			    </div>
			    <div class="form-group row">
			        <label class="col-md-3 col-form-label">Color</label>
			        <div class="col-md-9">
			            <input type="text" autocomplete="off" asp-for="Product.Color" name="Product.Color" class="form-control">
			            <span asp-validation-for="Product.Color" class="text-danger"></span>
			        </div>
			    </div>
			    <div class="form-group row">
			        <label class="col-md-3 col-form-label">Standard Cost</label>
			        <div class="col-md-9">
			            <input type="number" autocomplete="off" asp-for="Product.StandardCost" name="Product.StandardCost" class="form-control">
			            <span asp-validation-for="Product.StandardCost" class="text-danger"></span>
			        </div>
			    </div>
			    <div class="form-group row">
			        <label class="col-md-3 col-form-label">Price</label>
			        <div class="col-md-9">
			            <input type="number" autocomplete="off" asp-for="Product.ListPrice" name="Product.ListPrice" class="form-control">
			            <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
			        </div>
			    </div>
			
			    <div class="form-group row">
			        <label class="col-md-3 col-form-label">Description</label>
			        <div class="col-md-9">
			            <textarea autocomplete="off" asp-for="Product.Description" name="Product.Description" class="form-control"></textarea>
			            <span asp-validation-for="Product.Description" class="text-danger"></span>
			        </div>
			    </div>
			
			  
			
			    <div class="form-group row">
			        <label class="col-md-3 col-form-label">Discount Percent</label>
			        <div class="col-md-9">
			            <input type="number" autocomplete="off" asp-for="Product.DiscountPercent" name="Product.DiscountPercent" class="form-control">
			            <span asp-validation-for="Product.DiscountPercent" class="text-danger"></span>
			        </div>
			    </div>
			
			    <div class="form-group row">
			        <label class="col-md-3 col-form-label">Sell Start Date</label>
			        <div class="col-md-9">
			            <input type="date" autocomplete="off" asp-for="Product.SellStartDate" name="Product.SellStartDate" class="form-control">
			            <span asp-validation-for="Product.SellStartDate" class="text-danger"></span>
			        </div>
			    </div>
			
			    <div class="form-group row">
			        <label class="col-md-3 col-form-label">Sell End Date</label>
			        <div class="col-md-9">
			            <input type="date" autocomplete="off" asp-for="Product.SellEndDate" name="Product.SellEndDate" class="form-control">
			            <span asp-validation-for="Product.SellEndDate" class="text-danger"></span>
			        </div>
			    </div>
			
			
			     <div class="form-group row">
			        <label class="col-md-3 col-form-label">Status</label>
			       <div class="col-md-9">
			            <select asp-for="Product.StatusId" class="form-control" asp-items="@Model.StatusSelectNameList"></select>
			            <span asp-validation-for="Product.StatusId" class="text-danger"></span>
			        </div>
			    </div>
			    <div class="form-group row">
			        <label class="col-md-3 col-form-label">Category</label>
			        <div class="col-md-9">
			            <select asp-for="Product.ProductSubcategoryId" class="form-control" asp-items="@Model.SubcategorySelectNameList"></select>
			            <span asp-validation-for="Product.ProductSubcategoryId" class="text-danger"></span>
			        </div>
			    </div>
			
			
			
			
			    <div class="form-group row">
			        <div class="col-md-3">
			        </div>
			    </div>
			    <div class="form-group justify-content-between">
			        <button type="button" class="btn btn-secondary close-button" data-bs-dismiss="modal">Cancel</button>
			        <button type="submit" class="btn btn-primary save-button">Save</button>
			    </div>
			    <input type="hidden" autocomplete="off" asp-for="Product.MakeFlag" name ="Product.MakeFlag">
			    <input type="hidden" autocomplete="off" asp-for="Product.ProductId" name ="Product.ProductId">
			
			</form>
			<script type="text/javascript" language=javascript>
			    $.validator.unobtrusive.parse(document);
			</script>
